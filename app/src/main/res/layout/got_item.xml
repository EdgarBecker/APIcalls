<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/got_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/bevan"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Lord Droid" />

    <TextView
        android:id="@+id/got_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/bevan"
        app:layout_constraintEnd_toEndOf="@+id/got_name_text"
        app:layout_constraintStart_toStartOf="@+id/got_name_text"
        app:layout_constraintTop_toBottomOf="@+id/got_name_text"
        tools:text="newbie of the Year" />

    <TextView
        android:id="@+id/got_family_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/got_title_text"
        app:layout_constraintStart_toStartOf="@+id/got_title_text"
        app:layout_constraintTop_toBottomOf="@+id/got_title_text"
        tools:text="House of Integrity" />
</androidx.constraintlayout.widget.ConstraintLayout>